{
  "manifest_version": 3,
  "name": "Caută Cod Poștal",
  "description": "O extensie Chrome pentru căutarea codurilor poștale direct din meniul contextual sau fereastra popup. Extensia integreaza oapi.ro.",
  "version": "1.0",
  "permissions": [
    "contextMenus",
    "activeTab",
    "system.display"
  ],
  "host_permissions": [
    "*://oapi.ro/coduri-postale/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/16.png",
      "48": "icons/48.png",
      "128": "icons/128.png"
    }
  },
  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "popup.html",
        "icons/address16.png",
        "icons/address32.png",
        "icons/address128.png",
        "js/jquery.min.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}